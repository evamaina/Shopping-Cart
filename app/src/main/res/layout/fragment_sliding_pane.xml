<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#585858"
    tools:context=".SlidingPaneFragment">
    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#454545"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="25dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_shop_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/sourcesanspro_light"
                android:text="Shop"
                android:textColor="#ffff"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="2dp"
            android:background="#454545"
            android:padding="25dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_bag_image"
                android:gravity="center" />
            <TextView
                android:layout_marginTop="15dp"
                android:textColor="#ffff"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:text="Bag"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sourcesanspro_light"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/mid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/top_layout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.42"
            android:background="#454545"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="25dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_inspiration_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/sourcesanspro_light"
                android:text="Inspiration"
                android:textColor="#ffff"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="#454545"
            android:padding="25dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_stores_image"
                android:gravity="center" />
            <TextView
                android:layout_marginTop="15dp"
                android:textColor="#ffff"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:text="Stores"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sourcesanspro_light"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/mid_layout"
        android:background="#585858"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Account"
            android:textColor="#ffff"
            android:textSize="22sp"
            android:textAlignment="center"
            android:padding="15dp"
            android:background="#454545"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/sourcesanspro_light"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Support"
            android:textColor="#ffff"
            android:textSize="22sp"
            android:textAlignment="center"
            android:padding="15dp"
            android:background="#454545"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/sourcesanspro_light"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log out"
            android:textColor="#F3B453"
            android:textSize="22sp"
            android:textAlignment="center"
            android:padding="15dp"
            android:background="#454545"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/sourcesanspro_light"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FOLLOW US"
            android:textColor="#7E7E7E"
            android:textSize="22sp"
            android:textAlignment="center"
            android:paddingTop="20dp"
            android:background="#454545"
            android:fontFamily="@font/sourcesanspro_light"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/text_layout"
        android:background="#454545">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_facebook_image"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_twitter_image"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_pinterest_image"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>

