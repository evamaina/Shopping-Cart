<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddressFragment">



    <LinearLayout
        android:id="@+id/name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/f_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="First Name"
            android:textColorHint="#000000"
            android:textSize="20sp"
            android:paddingBottom="30dp"
            android:backgroundTint="#D8D8D8"
            android:fontFamily="@font/sourcesanspro_regular"/>

        <EditText
            android:id="@+id/l_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Last Name"
            android:textSize="20sp"
            android:textColorHint="#000000"
            android:paddingBottom="30dp"
            android:backgroundTint="#D8D8D8"
            android:fontFamily="@font/sourcesanspro_regular"/>

    </LinearLayout>

    <EditText
        android:id="@+id/address_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Address 1"
        android:textColorHint="#000000"
        android:layout_below="@id/name_layout"
        android:textSize="20sp"
        android:paddingBottom="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:backgroundTint="#D8D8D8"
        android:fontFamily="@font/sourcesanspro_regular"/>

    <EditText
        android:id="@+id/address_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Address 2"
        android:textColorHint="#000000"
        android:layout_below="@id/address_one"
        android:textSize="20sp"
        android:paddingBottom="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:backgroundTint="#D8D8D8"
        android:fontFamily="@font/sourcesanspro_regular"/>

    <LinearLayout
        android:id="@+id/city_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_two"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        >

        <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="City"
            android:textColorHint="#000000"
            android:textSize="20sp"
            android:paddingBottom="30dp"
            android:backgroundTint="#D8D8D8"
            android:fontFamily="@font/sourcesanspro_regular"/>

        <EditText
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="State"
            android:textColorHint="#000000"
            android:textSize="20sp"
            android:paddingBottom="30dp"
            android:backgroundTint="#D8D8D8"
            android:fontFamily="@font/sourcesanspro_regular"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/country_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/city_layout"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <EditText
            android:id="@+id/zip_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Zip Code"
            android:textColorHint="#000000"
            android:textSize="20sp"
            android:paddingBottom="30dp"
            android:backgroundTint="#D8D8D8"
            android:fontFamily="@font/sourcesanspro_regular"/>

        <EditText
            android:id="@+id/country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Country"
            android:textColorHint="#000000"
            android:textSize="20sp"
            android:paddingBottom="30dp"
            android:backgroundTint="#D8D8D8"
            android:fontFamily="@font/sourcesanspro_regular"/>
    </LinearLayout>

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/material_spinner"
        app:ms_hint_color="#000"
        android:layout_above="@id/save_continue"
        android:layout_marginBottom="20dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        />

    <Button
        android:id="@+id/save_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAVE AND CONTINUE"
        android:background="#454545"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:padding="20dp"
        android:fontFamily="@font/sourcesanspro_bold"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>